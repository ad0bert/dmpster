# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)

GET		/dmpster					controllers.Application.dmpster
GET		/dmpster/:id/details		controllers.Application.viewDetails(id: Long)
POST	/upload						controllers.Application.uploadAjax
POST	/dmpster/:id/delete			controllers.Application.deleteBucket(id: Long)
POST    /dmpster/:id/addTag/:tagName controllers.Application.addTag(id: Long, tagName: String)
POST    /dmpster/:id/removeTag/:tagName controllers.Application.removeTag(id: Long, tagName: String)